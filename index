  <button onclick="login()">Login</button>

  <p><a href="register.html">New here? Register</a></p>
  <p id="error"></p>

  <script>
    function login() {
      const u = document.getElementById('loginUser').value;
      const p = document.getElementById('loginPass').value;
      const ru = localStorage.getItem("gfUser");
      const rp = localStorage.getItem("gfPass");

      if (u === ru && p === rp) {
        window.location.href = "portal.html";
      } else {
        document.getElementById("error").innerText = "‚ùå Wrong credentials. Are you even my GF?";
      }
    }
  </script>
